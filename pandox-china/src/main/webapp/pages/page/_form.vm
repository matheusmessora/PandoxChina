<form id="pageForm" action="/page" autocomplete="on" method="post" enctype="multipart/form-data" accept-charset="UTF-8">
	<h2 id="pageFormH1">Crie sua página</h2>
	#foreach($error in $status.errorMessages) <b>$error</b> <br> #end

	<input type="hidden" id="id" name="page.id" value="$!page.id">


    <div class="row-fluid" id="urlDiv">
        <div class="span3">
            <label for="url" class="control-label">Endereço da página: </label>
        </div>
        <div class="span9">
            <input type="text" id="url" name="url" placeholder="divulga.pandox.com.br/" value="$!page.url" >
            <span id="urlHelp" class="help-inline"></span>
        </div>
    </div>

    <div class="row-fluid" id="nameDiv">
        <div class="span3">
            <label for="name" class="control-label">Título da página: </label>
        </div>
        <div class="span9">
            <input type="text" id="name" name="name" value="$!page.name" >
            <span id="nameHelp" class="help-inline"></span>
        </div>
    </div>

    <div class="row-fluid" id="descriptionDiv">
        <div class="span3">
            <label for="description" class="control-label">Descrição: </label>
        </div>
        <div class="span9">
            <input type="text" id="description" name="description" value="$!page.description" >
            <span id="descriptionHelp" class="help-inline"></span>
        </div>
    </div>


