<form id="pageForm" action="/page" autocomplete="on" method="post">
	<h2>Crie sua página</h2>
	#foreach($error in $status.errorMessages) <b>$error</b> <br> #end

	<input type="hidden" id="id" name="id" value="$!page.id">


    <div class="row-fluid" id="urlDiv">
        <div class="span3">
            <label for="url" class="control-label">Nome da página: </label>
        </div>
        <div class="span9">
            <input type="text" id="url" name="url" placeholder="divulga.pandox.com.br/" value="$!page.url" >
            <span id="urlHelp" class="help-inline"></span>
        </div>

    </div>


    <div class="row-fluid" id="mainColorDiv">
        <div class="span3">
            <label for="mainColor" class="control-label">Estilo</label>
        </div>
        <div class="span9">
            <input type="text" id="mainColor" name="mainColor" placeholder="Red" value="$!page.mainColor" >
            <span id="mainColorHelp" class="help-inline"></span>
        </div>
    </div>


    <div class="row-fluid" id="emailDiv">
        <div class="span3">
            <label for="email" class="control-label">E-mail</label>
        </div>
        <div class="span9">
            <input type="text" id="email" name="email" placeholder="email@email.com.br" value="$!page.email" >
            <span id="emailHelp" class="help-inline"></span>
        </div>
    </div>


    <div class="row-fluid">
        <div class="span3">
            <label for="img" class="control-label">Imagem de fundo</label>
        </div>
        <div class="span9">
            <input type="text" id="img" name="img" placeholder=".png" value="$!page.img" >
            <span id="imgHelp" class="help-inline"></span>
        </div>
    </div>


    <div class="row-fluid" id="phoneDiv">
        <div class="span3">
            <label for="ddd" class="control-label">Telefone</label>
        </div>
        <div class="span9">
            <input type="hidden" name="phonesForm[0].ddi" value="55">
            <input type="text" id="ddd" name="phonesForm[0].ddd" size="3" maxlength="2" class="span2" placeholder="ddd">
            <input type="tel" name="phonesForm[0].phone" id="phone"  class="span10">
            <span id="phoneHelp" class="help-inline"></span>
        </div>
    </div>


	<div class="control-group">
		<div class="controls">
			<button id="btnPage" class="btn btn-large btn-primary" type="button">Cadastrar</button>
		</div>
	</div>

</form>