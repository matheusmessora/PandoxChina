#parse("header.vm")

<div class="well">
	<h1>MyAdmin</h1>
	<hr />
	<div class="span5 center">HOME | REDE SOCIAL | MONEY | SETTINGS</div>

	#if($message.hasMessage())
	<div class="alert $message.cssClass">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<strong>Oooops!</strong> <br /> #foreach ($msg in $message.messages) $msg <br /> #end
	</div>
	#end

	<div class="alert alert-success">
		Para começar, crie sua primeira página para gerenciar. <br /> 
	</div>
	
	#parse("/page/_form.vm")


	<table class="table table-hover">
		<thead>
			<th>#</th>
			<th>Nome</th>
			<th>Cor</th>
		</thead>
		#foreach($page in $pages)
		<tr>
			<td>$page.id</td>
			<td>$page.url</td>
			<td>$page.mainColor</td>
		</tr>
		#end
	</table>


</div>



#parse("footer.vm")
