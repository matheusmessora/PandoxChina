#parse("header.vm")

<div class="row">
	<h1>UsuÃ¡rios</h1>
	<div class="span12">
		#if($message.hasMessage())
			<div class="alert $message.cssClass">
			  <button type="button" class="close" data-dismiss="alert">&times;</button>
			  <strong>Oooops!</strong> <br />
			  #foreach ($msg in $message.messages)
			  	$msg <br />
			  #end
			</div>
			
		#end
		<table class="table table-hover">
			<thead>
				<th>#</th>
				<th>Nome</th>
				<th>E-mail</th>
				<th> </th>
			</thead>
			#foreach($user in $users)
				<tr>
					<td>$user.id</td>
					<td>$user.name</td>
					<td>$user.email</td>
					<td><a href="/usuario/$user.id" class="btn btn-small btn-danger ">Editar</a></td>
				</tr>
			#end
		</table>
		
		#parse("/user/_form.vm")
	
	</div>
</div>
	

	
#parse("footer.vm")
